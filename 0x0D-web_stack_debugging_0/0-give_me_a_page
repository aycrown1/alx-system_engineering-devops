#!/usr/bin/env bash

# Update package list and install Apache if not already installed
sudo apt-get update
sudo apt-get install -y apache2

# Create a custom HTML page with "Hello Holberton"
sudo echo "Hello Holberton" > /var/www/html/index.html

# Configure Apache to serve the custom HTML page
sudo echo "ServerName localhost" >> /etc/apache2/apache2.conf

# Start Apache
sudo service apache2 start

# Ensure Apache is configured to return HTTP 200 OK response
sudo echo 'RewriteEngine On' >> /etc/apache2/apache2.conf
sudo echo 'RewriteRule ^/$ /index.html [L]' >> /etc/apache2/apache2.conf

# Restart Apache to apply changes
sudo service apache2 restart
